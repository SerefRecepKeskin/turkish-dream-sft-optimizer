# Environment variables template for Turkish Dream SFT Optimizer
# Copy this file to .env and modify values as needed

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Minimum content length for quality filtering
MIN_CONTENT_LENGTH=100

# Maximum content length to prevent memory issues
MAX_CONTENT_LENGTH=5000

# Minimum number of cultural indicators required
MIN_CULTURAL_INDICATORS=3

# =============================================================================
# PARALLEL PROCESSING CONFIGURATION
# =============================================================================

# Maximum number of parallel workers (leave empty for auto-detection)
MAX_WORKERS=

# Chunk size for parallel processing (leave empty for auto-calculation)
CHUNK_SIZE=

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Output directory for all generated files
OUTPUT_DIR=output

# Whether to save processed data (true/false)
SAVE_PROCESSED_DATA=true

# Whether to save OpenAI format (true/false)
SAVE_OPENAI_FORMAT=true

# Whether to save Cohere format (true/false)
SAVE_COHERE_FORMAT=true

# Whether to save quality report (true/false)
SAVE_QUALITY_REPORT=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file name
LOG_FILE=processing.log

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=false

# Enable memory optimization (true/false)
ENABLE_MEMORY_OPTIMIZATION=true

# Enable caching for repeated operations (true/false)
ENABLE_CACHING=true

# =============================================================================
# QUALITY ASSURANCE
# =============================================================================

# Minimum quality score for processed records (0.0-1.0)
MIN_QUALITY_SCORE=0.7

# Enable strict validation (true/false)
ENABLE_STRICT_VALIDATION=false

# Maximum number of validation errors to report
MAX_VALIDATION_ERRORS=10
